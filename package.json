{
  "name": "pixeloven",
  "author": "Brian Gebel <brian@pixeloven.com>",
  "description": "Framework for build Client and Server JavaScript applications",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "compile": "lerna run compile",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "test:watch": "lerna run test:watch",
    "pretty": "lerna run pretty",
    "build:docs": "typedoc --options typedoc.json",
    "deploy:docs": "ts-node --files tools/gh-pages-publish",
    "report-coverage": "cat ./packages/**/coverage/lcov.info | coveralls",
    "report-coverage-v2": "cat ./packages/**/coverage/lcov.info | codecov",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linter": {
      "example/**/*.{ts,tsx}": [
        "yarn pixeloven-cli pretty",
        "yarn pixeloven-cli lint",
        "git add"
      ],
      "packages/**/*.{ts,tsx}": [
        "lerna run pretty",
        "lerna run lint",
        "git add"
      ],
      "tools/**/*.{ts,tsx}": [
        "yarn pixeloven-cli pretty",
        "yarn pixeloven-cli lint",
        "git add"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "7.1.2",
    "@commitlint/config-conventional": "7.1.2",
    "@pixeloven/cli": "^2.0.0",
    "@types/node": "10.12.12",
    "codecov": "^3.1.0",
    "colors": "1.3.2",
    "commitizen": "3.0.5",
    "coveralls": "3.0.2",
    "cross-env": "5.2.0",
    "cz-conventional-changelog": "2.1.0",
    "husky": "1.2.0",
    "lerna": "3.5.1",
    "lint-staged": "8.1.0",
    "lodash.camelcase": "4.3.0",
    "prompt": "1.0.0",
    "replace-in-file": "3.4.2",
    "semantic-release": "15.12.4",
    "ts-node": "7.0.1",
    "typedoc": "0.13.0"
  }
}
