{
  "name": "pixeloven",
  "author": "Brian Gebel <brian@pixeloven.com>",
  "description": "Framework for build Client and Server JavaScript applications",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.0.0"
  },
  "workspaces": {
    "packages": [
      "examples/*",
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "compile": "lerna run compile",
    "env:create": "lerna run env:create",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "pretty": "lerna run pretty",
    "build:docs": "typedoc --options typedoc.json",
    "deploy:docs": "ts-node --files tools/gh-pages-publish",
    "report-coverage": "cat ./packages/**/coverage/lcov.info | codecov",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linter": {
      "examples/**/*.{ts,tsx}": [
        "yarn pretty",
        "yarn lint",
        "git add"
      ],
      "packages/**/*.{ts,tsx}": [
        "yarn pretty",
        "yarn lint",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "codecov": "^3.1.0",
    "cz-lerna-changelog": "^2.0.1",
    "husky": "1.2.1",
    "lerna": "3.5.1",
    "lint-staged": "8.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
