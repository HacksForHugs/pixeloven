{
  "name": "pixeloven",
  "author": "Brian Gebel <brian@pixeloven.com>",
  "description": "Framework for build Client and Server JavaScript applications",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0",
    "yarn": ">=1.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b packages/pixeloven-cli packages/pixeloven-core",
    "build:docs": "typedoc --options typedoc.json",
    "clean": "rimraf **/node_modules",
    "deploy:docs": "ts-node --files tools/gh-pages-publish",
    "lint": "pixeloven-tools lint",
    "pretty": "pixeloven-tools pretty",
    "prebuild": "rimraf **/dist && rimraf **/docs",
    "pretest": "rimraf **/coverage",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{tools}/**/*.ts": [
      "yarn run pretty",
      "yarn run lint",
      "git add"
    ],
    "packages/**/*.ts": [
      "lerna run pretty",
      "lerna run lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "packages/"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "testMatch": [
      "<rootDir>/**/test/**/*.(j|t)s?(x)",
      "<rootDir>/**/?(*.)(spec|test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@pixeloven/tools": "^0.1.3",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.0",
    "colors": "^1.3.2",
    "commitizen": "^3.0.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "1.1.3",
    "jest": "23.6.0",
    "jest-config": "23.6.0",
    "lerna": "3.4.3",
    "lint-staged": "^7.3.0",
    "lodash.camelcase": "^4.3.0",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.4.2",
    "rimraf": "2.6.2",
    "rollup": "^0.66.2",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.17.0",
    "semantic-release": "^15.9.16",
    "ts-jest": "23.10.4",
    "ts-node": "7.0.1",
    "typedoc": "0.13.0",
    "typedoc-plugin-monorepo": "0.1.0",
    "typescript": "3.1.6"
  }
}
